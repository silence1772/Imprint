.header {
  width: 750rpx;
  height: 400rpx;
  background-color: #fed847;
  margin-bottom: 50rpx;
}

.info {
  padding-top: 80rpx;
  margin: auto;
  text-align: center;
}

.user-avator {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: auto;
  margin-bottom: 30rpx;
}

.item {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 150rpx;
  align-items: center;
}

.item-icon {
  width: 45rpx;
  height: 45rpx;
  margin: 0 50rpx;
}

.right-arrow {
    display :inline-block;
    position: relative;
    width: 30rpx;
    height: 30rpx;
    margin-right: 50rpx;
}

.right-arrow::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c7c7cc;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 6rpx;
    margin-top: -9rpx;
}