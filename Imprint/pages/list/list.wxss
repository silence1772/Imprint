.header {
  width: 750rpx;
  background-color: #fed847;
  display: flex;
  align-items: center;
}

.header-content {
  font-size: 14px;
  font-weight: 500;
  margin-left: 30rpx;
}

.scroll-view_V {
  width: 750rpx;
  background-color: #f0f0f0;
  text-align: center;
}

.scroll-view_V-item {
  display: inline-block;
  width: 640rpx;
  height: 300rpx;
  border-radius: 30rpx;
  text-align: left;
  margin-top: 50rpx;
}

.card-item {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  background-color: #fff;
  overflow: hidden;
}

.user-info {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  align-items: center;
}

.user-avator {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.detail {
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  padding: 0 20rpx;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pre-image {
  width: 100%;
  height: 160rpx;
}
