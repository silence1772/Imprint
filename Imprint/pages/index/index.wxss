/**index.wxss**/
page {
  height: 100%;
}

.footer {
  width: 100%;
  height: 30%;
  background-color: #f0f0f0;
}

.mask-layer {
  position: fixed;
  width: 100%;
  height: 30%;
  bottom: 0px;
  left: 0px;
  z-index:999;
  background-color:rgba(255,255,255,0.85);
}

.nav {
  height: 100%;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.nav-item {
  text-align: center;
}

.nav-icon {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: auto;
}

.scroll-view_H {
  white-space: nowrap;
  width: 100%;
  height: 100%;
  /*background-color: #fed847;*/
  /*background: linear-gradient(#f0f0f0 50%,#fed847 50%);*/
  background: linear-gradient(#f7f5f5, rgba(254,216,71,0.5));
}

.scroll-view_H-item {
  display: inline-block;
  width: 640rpx;
  height: 100%;
  border-radius: 30rpx;
  margin: 0rpx 15rpx;
  /*background-image: url("http://ofx0oa4m3.bkt.clouddn.com/0425.png");*/
}

.margin-left {
  margin-left: 55rpx;
}
.margin-right {
  margin-right: 55rpx;
}

.card-item {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 30rpx;
  background-color: #fff;
  overflow: hidden;
}

.card-musk {
  position: absolute;
  width: 640rpx;
  height: 300rpx;
  bottom: 0px;
  left: 0px;
  z-index:998;
  border-radius: 30rpx;
  text-align: center;
  font-size: 14px;
  color: #c7c7cd;
  padding-top: 250rpx;
  box-sizing: border-box;
  background: linear-gradient(rgba(255,255,255,0.3), rgba(255,255,255,1));
}

.user-info {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  align-items: center;
}

.user-avator {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.detail {
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  padding: 0 20rpx;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pre-image {
  width: 100%;
  height: 160rpx;
}
